<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <title>Edit Product</title>
  </head>
  <body>
    <%- include('./includes/navbar.ejs') %>
    <div class="container-fluid mt-5 d-flex justify-content-center">
      <form class="w-25" action="/product/update/<%= product.id %>?_method=PUT" method="post">
        <h2 class="fw-bold text-muted display-4 m-3 mb-2">Edit Product</h2>
        <div class="form-control m-3 p-4">
          <div class="row">
            <div class="col-8 mt-2 mb-3">
              <label class="form-label fs-4"> Product Name </label>
              <input
                type="text"
                name="productname"
                class="form-control"
                value="<%=product.productname %>"
                required
              />
            </div>
            <div class="col-4 mt-2 mb-3">
              <label class="form-label fs-4"> Price </label>
              <input
                type="text"
                name="price"
                class="form-control"
                value="<%=product.price %>"
                required
              />
            </div>
          </div>

          <div class="my-3">
            <label class="form-label fs-4"> Select Image </label>
            <input type="file" name="image" class="form-control" required />
          </div>
        </div>

        <button class="btn btn-primary fs-4 m-3 w-100" type="submit">
          Save Changes
        </button>
      </form>
    </div>
  </body>
</html>
